<?xml version="1.0" encoding="utf-8"?>
<!--
    ============================================================================
    activity_main.xml - LISTADO DE PARTIDOS
    ============================================================================

    Contiene un ListView que mostrará todos los partidos.
    Cada fila se define en row_game.xml y se gestiona con GameAdapter.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--
        ListView: Muestra una lista vertical de elementos.
        El Adapter (GameAdapter) controla qué se muestra en cada fila.
    -->
    <ListView
        android:id="@+id/list_games"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>