<?xml version="1.0" encoding="utf-8"?>
<!--
    ============================================================================
    activity_reserve.xml - PANTALLA DE RESERVA
    ============================================================================

    Estructura:
    +__________________________________+
    |           Mesa 3                 |
    |    Capacidad: 6 personas         |
    |                                  |
    |    Nombre: [____________]        |
    |    Comensales: [____]            |
    |                                  |
    |         [RESERVAR]               |
    +__________________________________+
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Número de mesa -->
    <TextView
        android:id="@+id/txt_table_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- Capacidad -->
    <TextView
        android:id="@+id/txt_capacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginBottom="32dp"/>

    <!-- Campo: Nombre -->
    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        android:inputType="textPersonName"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Campo: Número de comensales -->
    <EditText
        android:id="@+id/edit_guests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_guests"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <!-- Botón Reservar -->
    <Button
        android:id="@+id/btn_reserve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/btn_reserve"/>

</LinearLayout>