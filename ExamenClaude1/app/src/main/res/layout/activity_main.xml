<?xml version="1.0" encoding="utf-8"?>
<!--
    ============================================================================
    activity_main.xml - LISTADO DE MESAS
    ============================================================================

    Contiene un ListView que mostrará todas las mesas
    Cada fila se define en row_table.xml y se gestiona con TableAdapter.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--
        ListView: Muestra una lista vertical de elementos.
        El Adapter (TableAdapter) controla qué se muestra en cada fila.
    -->
    <ListView
        android:id="@+id/list_tables"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>