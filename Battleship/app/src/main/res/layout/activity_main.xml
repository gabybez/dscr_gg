<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Cabecera -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ancla"
            android:textSize="32sp"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/battleship"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />
        </LinearLayout>
    </LinearLayout>

    <!-- Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/navy_light"
        android:layout_marginBottom="24dp" />

    <!-- Botones principales -->
    <Button
        android:id="@+id/btn_New_game"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_button_primary"
        android:text="@string/btn_new_game"
        android:textColor="@color/text_primary"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_Partidas_on"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_button_secondary"
        android:text="@string/btn_partidas_on"
        android:textColor="@color/text_primary"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_Invitaciones"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_button_secondary"
        android:text="@string/btn_invitaciones"
        android:textColor="@color/text_primary"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_Partidas_off"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_button_secondary"
        android:text="@string/btn_partidas_off"
        android:textColor="@color/text_primary"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Espaciador flexible -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Botones inferiores -->
    <Button
        android:id="@+id/btn_Perfil"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_button_secondary"
        android:text="@string/btn_perfil"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/Btn_salir"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_button_danger"
        android:text="@string/btn_salir"
        android:textColor="@color/text_primary"
        android:textSize="14sp" />

</LinearLayout>