<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema principal Battleship -->
    <style name="Theme.Battleship" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/navy_medium</item>
        <item name="colorPrimaryVariant">@color/navy_dark</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/action_primary</item>
        <item name="colorSecondaryVariant">@color/action_primary_dark</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <!-- Fondo -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Textos -->
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/navy_dark</item>
    </style>
</resources>